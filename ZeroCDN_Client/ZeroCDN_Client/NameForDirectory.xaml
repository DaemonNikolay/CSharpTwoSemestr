<Window x:Name="WindowNameDirectory" x:Class="ZeroCDN_Client.NameForDirectory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZeroCDN_Client"
        mc:Ignorable="d"
        Title="Название для директории" Height="300" Width="300" Icon="Image/favicon.ico" Background="White" Foreground="Black">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Image/background.PNG" Opacity="0.4"/>
        </Grid.Background>
        <Button x:Name="OkNameDirectory" Content="Ок" HorizontalAlignment="Left" Margin="174,207,0,0" VerticalAlignment="Top" Width="75" Click="OkNameDirectory_Click"/>
        <Button x:Name="CancelNameDirectory" Content="Отмена" HorizontalAlignment="Left" Margin="45,207,0,0" VerticalAlignment="Top" Width="75" Click="CancelNameDirectory_Click"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Center" Margin="0,0,0,111" TextWrapping="Wrap" Text="Название" VerticalAlignment="Center" FontWeight="Bold"/>
        <TextBox x:Name="NameDirectory" HorizontalAlignment="Left" Height="23" Margin="82,114,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="130"/>

    </Grid>
</Window>
