<Window x:Class="ZeroCDN_Client.MovingToDirectory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZeroCDN_Client"
        mc:Ignorable="d"
        Title="MovingToDirectory" Height="300" Width="300">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Image/background.PNG" Opacity="0.4"/>
        </Grid.Background>
        <ComboBox x:Name="comboBoxListDirectories" HorizontalAlignment="Left" Margin="41,82,0,0" VerticalAlignment="Top" Width="216" Height="26"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="10,44,0,0" TextWrapping="Wrap" Text="Выберите в какую директорию перемещать" VerticalAlignment="Top" Width="274" FontWeight="Bold" TextAlignment="Center"/>
        <Button x:Name="OkNameDirectory" Content="Ок" HorizontalAlignment="Left" Margin="174,207,0,0" VerticalAlignment="Top" Width="75" Click="OkNameDirectory_Click"/>
        <Button x:Name="CancelNameDirectory" Content="Отмена" HorizontalAlignment="Left" Margin="45,207,0,0" VerticalAlignment="Top" Width="75" Click="CancelNameDirectory_Click"/>

    </Grid>
</Window>
