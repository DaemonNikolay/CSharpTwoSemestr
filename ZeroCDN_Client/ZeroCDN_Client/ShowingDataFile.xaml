<Window x:Class="ZeroCDN_Client.ShowingDataFile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZeroCDN_Client"
        mc:Ignorable="d"
        Title="Содержимое файла" Height="300" Width="300" WindowState="Maximized" Icon="Image/favicon.ico">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Image/background.PNG" Opacity="0.4"/>
        </Grid.Background>
        <Image x:Name="imageDataShow" Height="250" Margin="0" Width="274"/>
        <TextBox x:Name="textBoxDataShow" Margin="0" TextWrapping="Wrap" Text="TextBox" VerticalScrollBarVisibility="Auto" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" IsReadOnly="True" HorizontalScrollBarVisibility="Auto" Grid.IsSharedSizeScope="True" Padding="15"/>

    </Grid>
</Window>
